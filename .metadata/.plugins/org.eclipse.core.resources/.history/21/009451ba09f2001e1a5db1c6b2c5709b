package com.example.aggregatorservice;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

@SpringBootApplication
@RestController
public class AggregatorServiceApplication {

    @Autowired
    private RestTemplate restTemplate;

    @Value("${product.service.url}")
    private String productServiceUrl;

    @Value("${order.service.url}")
    private String orderServiceUrl;

    @GetMapping("/aggregated-orders/{id}")
    public AggregatedOrder getAggregatedOrderById(@PathVariable Long id) {
        Product product = restTemplate.getForObject(productServiceUrl + "/products/" + id, Product.class);
        Order order = restTemplate.getForObject(orderServiceUrl + "/orders/" + id, Order.class);
        return new AggregatedOrder(order.getId(), order.getProduct(), order.getQuantity());
    }

    public static void main(String[] args) {
        SpringApplication.run(AggregatorServiceApplication.class, args);
    }

    @Bean
    public RestTemplate restTemplate() {
        return new RestTemplate();
    }
}
